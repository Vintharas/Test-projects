<Application
    x:Class="MovieBrowser.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieBrowser"
    xmlns:localData="using:MovieBrowser.Data"
    xmlns:model="using:MovieBrowser.DataModel" xmlns:viewModels="using:MovieBrowser.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
                <ResourceDictionary Source="Common/MovieBrowserStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">MovieBrowser</x:String>
            <viewModels:MovieBrowserViewModel x:Key="MovieBrowserViewModel"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
